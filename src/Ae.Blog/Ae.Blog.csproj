  </PropertyGroup>
  
  <ItemGroup>
  <PackageReference Include="Ae.Freezer.Aws" Version="1.1.0" />
  <PackageReference Include="Amazon.AspNetCore.DataProtection.SSM" Version="3.1.1" />
