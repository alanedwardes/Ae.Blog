@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Model Viewer</title>
    <script type="module" src="/lib/model-viewer/model-viewer.min.js"></script>
    <style>
        html {
            height: 100%;
        }

        body {
            margin: 0;
            height: 100%;
            background: #222;
        }

        model-viewer {
            width: 100%;
            height: 100%;
            --poster-color: transparent;
        }
    </style>
    <script>
        function init() {
            let viewer = document.createElement('model-viewer');
            const urlParams = new URLSearchParams(window.location.search);

            viewer.setAttribute('src', 'https://s.edward.es/' + urlParams.get('model'));
            viewer.setAttribute('camera-controls', 'camera-controls');
            document.body.appendChild(viewer);
        }
    </script>
</head>
<body onload="init()"></body>
</html>