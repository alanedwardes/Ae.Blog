@using Microsoft.Extensions.DependencyInjection
@using Ae.Blog.Services;
@{ 
    var colourRepository = Context.RequestServices.GetRequiredService<IColourRepository>();
    var highlightColour = colourRepository.GetHighlightColour();
    var highlightColourHex = '#' + highlightColour.ToHex();
    var lighterHighlightColourHex = '#' + highlightColour.WithAlpha(.5f).ToHex();
}
body {
    margin: 0;
    padding: 0;
    height: 100%;
    line-height: 1.5em;
    background: #111;
    height: 100%;
    overflow-y: scroll;
}

hr {
    color: @highlightColourHex;
    background-color: @highlightColourHex;
    height: 2px;
    border: 0;
}

body {
    font-size: 1.2em;
    font-family: "Georgia", sans-serif;
}

textarea, button, input {
    font-size: inherit;
    font-family: inherit;
    color: inherit;
    background: #333;
    border: 1px solid #333;
}

input, textarea {
    padding: 2.5px 5px;
}

input[type=text] {
    min-width:100%;
}

button {
    padding: 5px 10px;
    border: 0;
    width: 100%;
}

    button:hover {
        background: #444;
    }

h1, h2, h3, h4, h5 {
    font-family: sans-serif;
}

body, a {
    color: #ccc;
}

a {
    color: #eee;
    border-bottom: 2px solid @highlightColourHex;
}

    a:hover {
        border-bottom: 2px solid @lighterHighlightColourHex;
    }

main {
    background: #222;
}

section {
    padding: 20px 20px;
    max-width: 960px;
    margin: 0 auto;
}

div.banner {
    height:240px;
    background-position:center top;
    background-repeat:repeat-x;
    border-bottom: 5px solid @highlightColourHex;
}

@@media (max-width: 800px) {
    .right {
        display: none;
    }
}

.right {
    float: right;
}

a {
    text-decoration: none;
}

.clear {
    clear: both;
}

h1, h2, h3, h4, h5 {
    line-height: 1.4em;
    font-weight: normal;
    color: white;
    margin: 0;
}

article h3 {
    background: #111;
    display: inline-block;
    padding: 5px 10px;
}

header {
    border-bottom: 5px solid @highlightColourHex;
    color: #aaa;
    font-size:1.1em;
    background: white;
}

    header .left {
        float: left;
    }

    header h1, header p {
        margin: 0
    }

    header section h1 a {
        color: #444;
    }

    header section a {
        color: #777;
    }

    header ul a {
        color: #555;
    }

    header ul {
        font-variant: small-caps;
        float: right;
        list-style-type: none;
        margin: 1.1em 0 0 0;
        padding: 0;
    }

    header li {
        padding: 0 10px;
        float: left;
    }

    header a, header a:hover {
        border: 0;
    }

    header li.selected a {
        border-bottom: 2px solid @lighterHighlightColourHex;
    }

footer {
    background: #111;
}

    footer, footer a {
        color: #aaa;
    }

        footer p {
            margin: 0;
        }

        footer .ligature {
            float: right;
        }

.home {
    font-size: 1.25em;
    line-height: 1.75em;
}

.projects article h2 {
    text-align: center;
    margin-bottom: 40px;
}

.projects article {
    margin: 40px 0;
}

    .projects article + article {
        margin: 80px 0 40px 0;
    }

    .projects article .images {
        text-align: center;
    }

        .projects article .images img {
            margin: 5px 10px;
            box-shadow: 0px 0px 5px black;
        }

article pre, article code, article a {
    white-space: pre-wrap;
    word-wrap: break-word;
}

article pre, article code {
    line-height: 1.5em;
    font-family: 'Consolas', monospace;
}

article pre {
    font-size: .9em;
}

    article pre code {
        display: block;
    }

        article pre code:not(.hljs) {
            padding: .5em;
            background: #282b2e;
            color: #e0e2e4;
        }

article p code, article ul code {
    padding: 2.5px 5px;
}

article .meta {
    color: #757575;
}

article img, article video {
    max-width: 100%;
}

.sidebar {
    font-size:.9em;
    line-height: 1.5em;
    margin-left: 20px;
    max-width: 220px;
    margin-bottom: 20px;
    padding: 10px 15px;
    background: #252525;
    border: 2px solid #333;
}

    .sidebar ul {
        padding-left: 20px;
    }

    .sidebar .meta {
        color: #757575;
    }

    .sidebar .icons {
        text-align:center;
    }

    .sidebar .icons a {
        border:0;
        padding:0px 7.5px;
    }

textarea {
    width: 100%;
    height: 512px;
    display: block;
}

#disqus_thread {
    min-height:512px;
}