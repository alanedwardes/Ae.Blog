@model AeBlog.Models.AdminModel
@{
	ViewData["Title"] = "Admin";
}

<section>
    <h2>Admin</h2>
    <p><a href="/session/logout">Log Out</a></p>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Published</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var post in Model.Posts)
			{
				<tr>
					<td><a href="@post.Url">@post.Title</a></td>
					<td>@post.Published</td>
					<td><a href="/admin/edit/@post.Slug/">Edit</a><td>
				</tr>
			}
		</tbody>
	</table>
</section>