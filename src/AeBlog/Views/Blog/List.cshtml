@using Humanizer
@model AeBlog.Models.BlogModel
@{
    ViewData["Title"] = "Blog";
}

<section>
    @await Html.PartialAsync("Sidebar", Model.Archive)
    <aside>
        @foreach (var post in Model.Posts)
        {
            @await Html.PartialAsync("Post", post)
        }
    </aside>
</section>
