@using Humanizer
@model AeBlog.Models.BlogModel
@{
    ViewData["Title"] = "Blog";
}

<section>
    @await Html.PartialAsync("Sidebar", Model.Archive)
    <aside>
        @if (!string.IsNullOrWhiteSpace(Model.Category))
        {
            <h2>Category "@Model.Category"</h2>
            <p>Viewing subset of posts filtered by category.</p>
        }
        @foreach (var post in Model.Posts)
        {
            @await Html.PartialAsync("Post", post)
        }
    </aside>
</section>
