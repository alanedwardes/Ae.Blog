@using AeBlog.Data
@using AeBlog.Display;
@using AeBlog.ViewModels;
@model SinglePostViewModel
@{
    ViewBag.LayoutParameters = new LayoutParameters(Model.Post.Title, ViewType.Single);
    Layout = "/Views/Layout.cshtml";
}

<div class="wrp">
    <div id="cnt">
        <h1>@Model.Post.Title</h1>
        <p><small class="subtitle">Published on @Model.Post.Published.ToString("dd") of @Model.Post.Published.ToString("MMMM yyyy")</small></p>
        @Html.Raw(Model.Post.Body)
    </div>
</div>
