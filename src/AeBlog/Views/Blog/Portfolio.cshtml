@using AeBlog.Data
@using AeBlog.Display;
@using AeBlog.ViewModels;
@model PortfolioViewModel
@{
    ViewBag.LayoutParameters = new LayoutParameters("Portfolio", ViewType.Portfolio);
    Layout = "/Views/Layout.cshtml";
}

<div class="wrp prt list">
    <h1>Portfolio</h1>
    @foreach (var category in Model.Categories.OrderBy(c => c.Ordering))
    {
        <h2>@category.Name</h2>
        foreach (var portfolio in Model.Portfolios.Where(p => p.CategoryId == category.Id).Select((p, i) => new KeyValuePair<int, Portfolio>(i, p)))
        {
            @Html.Partial("PortfolioItem", portfolio.Value)
            if (portfolio.Key % 2 != 0) {
                <div class="clr"></div>
            }
        }
        <div class="clr"></div>
    }
</div>