@using Humanizer
@model AeBlog.Models.PostSummary[]
<aside class="right">
    <div class="sidebar">
        <h3>About the Author</h3>
        <p>Alan is a hobbyist <a href="https://iamestranged.com/">Game Developer</a> and a Software Engineer at <a href="https://www.autodesk.com/">Autodesk</a>.</p>
        <div>
            @foreach (var month in Model.GroupBy(x => new DateTime(x.Published.Year, x.Published.Month, 1)))
            {
            <h4>Posts in @month.Key.ToString("MMMM") @month.Key.Year</h4>
                <ul>
                    @foreach (var post in month)
                    {

                        <li>@post.Title <a href="@post.Url">on the @post.Published.Day.Ordinalize()</a></li>
                    }
                </ul>
            }
        </div>
    </div>
</aside>